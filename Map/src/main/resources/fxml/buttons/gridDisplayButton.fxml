<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<ToggleButton mnemonicParsing="false" styleClass="toolbarButton"
        xmlns="http://javafx.com/javafx/10.0.2-internal">
    <tooltip>
        <Tooltip styleClass="tooltip" text="Show/hide a grid" />
    </tooltip>
    <graphic>
        <ImageView>
            <Image preserveRatio="true" requestedHeight="25" requestedWidth="25"
                   smooth="true" url="@/icons/gridDisplay.png" />
        </ImageView>
    </graphic>
    <stylesheets>
        <URL value="@/stylesheets/style.css"/>
    </stylesheets>
</ToggleButton>